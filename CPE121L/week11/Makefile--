GCC = g++
CFLAGS = -Wall -Werror -g
TARGET = main
OBJECT = main.o class/GrandFa/GrandFa.o class/GrandMa/GrandMa.o class/FaMa/FaMa.o 

.SILENT:

all : $(OBJECT)
	$(GCC) $(OBJECT) -o $(TARGET) $(LIBS)
	./$(TARGET)

debug: $(OBJECT)
	$(GCC) $(OBJECT) -o $(TARGET) $(LIBS)
	gdb ./$(TARGET)

%.o : %.cpp
	$(GCC) -c $< -o $@

clean :
	rm -f *.o class/GrandFa/GrandFa.o class/GrandMa/GrandMa.o class/FaMa/FaMa.o  $(TARGET)
	clear